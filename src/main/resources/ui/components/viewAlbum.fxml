<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" styleClass="background" stylesheets="@viewAlbum.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <ImageView id="albumImage" fx:id="albumImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></ImageView>
            <Button id="playButton" mnemonicParsing="false" style="-fx-background-color: transparent;" styleClass="text-button">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" styleClass="text-button">
                     <image>
                        <Image url="@../images/icons/play.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Label id="albumName" fx:id="label" alignment="CENTER" styleClass="text" stylesheets="@viewAlbum.css" textFill="WHITE">
               <padding>
                  <Insets left="10.0" />
               </padding></Label>
         </children>
         <opaqueInsets>
            <Insets left="10.0" />
         </opaqueInsets></HBox>
      <HBox HBox.hgrow="ALWAYS" />
      <HBox alignment="CENTER">
         <children>
            <Button id="editButton" mnemonicParsing="false" style="-fx-background-color: transparent;" styleClass="text-button" text="Edit">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/icons/pencil-alt.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
   </padding>
</HBox>
