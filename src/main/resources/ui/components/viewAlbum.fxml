<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" minWidth="400.0" spacing="10.0" styleClass="background" stylesheets="@viewAlbum.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Button id="albumDetails" mnemonicParsing="false" style="-fx-background-color: #161721;">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label id="albumName" fx:id="label" alignment="CENTER" style="-fx-font-size: 18;" styleClass="text" stylesheets="@viewAlbum.css" textFill="WHITE">
               <padding>
                  <Insets left="10.0" />
               </padding></Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
         <opaqueInsets>
            <Insets left="10.0" />
         </opaqueInsets></HBox>
      <HBox alignment="CENTER" HBox.hgrow="NEVER">
         <children>
            <Button id="playButton" mnemonicParsing="false" style="-fx-background-color: transparent;" styleClass="text-button" HBox.hgrow="NEVER">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" styleClass="text-button">
                     <image>
                        <Image url="@../images/icons/play.png" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children></HBox>
      <HBox alignment="CENTER">
         <children>
            <Button id="editButton" mnemonicParsing="false" style="-fx-background-color: transparent;" styleClass="text-button" text="Edit">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/icons/pencil-alt.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
   </padding>
</HBox>
