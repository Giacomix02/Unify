<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<HBox alignment="CENTER" styleClass="song-row" stylesheets="@songRow.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView id="picture" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" styleClass="image" HBox.hgrow="NEVER">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor></ImageView>
      <Text id="songName" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="song-text" text="Text" />
      <HBox HBox.hgrow="ALWAYS" />
      <Text id="genreName" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
      <HBox HBox.hgrow="ALWAYS" />
      <Text id="artistName" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin></Text>
      <HBox alignment="CENTER" stylesheets="@songRow.css">
         <children>
            <Button id="editButton" mnemonicParsing="false" style="-fx-background-color: transparent;" styleClass="text-button" stylesheets="@songRow.css" text="Edit">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/icons/pencil-alt.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <HBox.margin>
            <Insets left="12.0" />
         </HBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
   </padding>
</HBox>
