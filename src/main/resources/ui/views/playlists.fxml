<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../app.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univaq.disim.psvmsa.unify.controller.PlaylistsController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <HBox fx:id="searchBox" alignment="CENTER_RIGHT" styleClass="searchBox" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </HBox>
            <HBox fx:id="addBox" alignment="CENTER_LEFT" />
            <Button id="button" fx:id="addButton" mnemonicParsing="false" onAction="#addPlaylist" style="-fx-background-color: transparent;" stylesheets="@../components/add.css" text="Add" textAlignment="CENTER">
               <graphic>
                  <ImageView styleClass="image">
                     <image>
                        <Image url="@../images/icons/add.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
      <Label styleClass="title-text" text="Playlists" />
      <VBox fx:id="playlistsBox" spacing="10.0" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
