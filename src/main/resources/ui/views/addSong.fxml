<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univaq.disim.psvmsa.unify.controller.AddSongController">
   <children>
      <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
         <children>
            <Label prefHeight="64.0" prefWidth="120.0" styleClass="title-text" text="Add song">
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </Label>
            <HBox>
               <children>
                  <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="header-textfield" text="Insert song name">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="songNameInput" prefHeight="30.0" prefWidth="244.0" promptText="write here..." style="-fx-background-radius: 7;" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
                  <HBox prefHeight="100.0" prefWidth="159.0" HBox.hgrow="ALWAYS" />
                  <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="saveImageButton" mnemonicParsing="false" onAction="#uploadImage" styleClass="custom-button" text="Upload an Image" />
                        <Label fx:id="saveImageLabel" text="Image Uploaded!" />
                     </children>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="header-textfield" text="Insert song lyrics">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Label>
                        <TextArea fx:id="songLyricsInput" prefHeight="102.0" prefWidth="579.0" promptText="write here..." style="-fx-background-radius: 10; -fx-text-fill: black;" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Label text="Choose artist/s" />
                              <ChoiceBox fx:id="artistBoxChoice" prefWidth="150.0" style="-fx-text-fill: black;" stylesheets="@../app.css" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Label text="Choose an album" />
                              <ChoiceBox fx:id="albumBoxChoice" prefWidth="150.0" style="-fx-text-fill: black;" stylesheets="@../app.css" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Label text="Choose genre/s" />
                              <ChoiceBox fx:id="genreBoxChoice" prefWidth="150.0" style="-fx-text-fill: black;" stylesheets="@../app.css" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <VBox alignment="CENTER" VBox.vgrow="ALWAYS" />
            <HBox>
               <children>
                  <Button fx:id="saveButton" minWidth="100.0" mnemonicParsing="false" onAction="#saveSong" styleClass="custom-button" text="Save" />
                  <HBox HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </HBox>
                  <Button fx:id="exit" mnemonicParsing="false" onAction="#exit" style="-fx-background-color: #3D9CA2;" styleClass="custom-button" text="Exit" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
