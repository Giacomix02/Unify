<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univaq.disim.psvmsa.unify.controller.EditArtistController">
    <children>
        <VBox alignment="TOP_CENTER" minWidth="700.0" VBox.vgrow="NEVER">
            <children>
                <HBox VBox.vgrow="NEVER">
                    <children>
                        <VBox prefHeight="350.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                            <children>
                        <HBox>
                           <children>
                              <Label text="Artist type">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                                 <padding>
                                    <Insets left="11.0" right="15.0" top="2.0" />
                                 </padding>
                              </Label>
                              <ChoiceBox prefWidth="150.0" styleClass="combo-box" stylesheets="@../app.css" />
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding></HBox>
                        <HBox prefHeight="25.0" prefWidth="200.0" />
                                <TextField fx:id="artistNameInput" promptText="Artist name">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </TextField>
                        <HBox prefHeight="25.0" prefWidth="50.0" />
                              <TextArea fx:id="artistBiographyInput" minHeight="150.0" prefHeight="181.0" prefWidth="200.0" promptText="Artist biography" />
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER" HBox.hgrow="NEVER">
                            <children>
                                <ImageView fx:id="artistImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../images/artist-placeholder.png" />
                                    </image>
                                </ImageView>
                                <Button fx:id="uploadImageButton" mnemonicParsing="false" onAction="#uploadImage" prefWidth="200.0" styleClass="custom-button" text="Select image">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox alignment="CENTER" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox>
                    <children>
                        <Button fx:id="exit" mnemonicParsing="false" onAction="#exit" style="-fx-background-color: #3D9CA2;" styleClass="custom-button" text="Cancel" />
                        <HBox HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </HBox>
                        <Button fx:id="saveButton" minWidth="100.0" mnemonicParsing="false" onAction="#saveArtist" styleClass="custom-button" text="Update" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="9.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
