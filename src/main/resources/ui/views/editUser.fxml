<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minHeight="400.0" minWidth="600.0" stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univaq.disim.psvmsa.unify.controller.EditUserController">
    <children>
        <VBox alignment="CENTER" fillWidth="false" VBox.vgrow="ALWAYS">
            <children>
                <Label styleClass="title-text" text="Create user">
                    <padding>
                        <Insets bottom="25.0" />
                    </padding>
                </Label>
                <VBox prefWidth="200.0" spacing="10.0" VBox.vgrow="NEVER">
                    <children>
                        <TextField fx:id="usernameInput" prefHeight="30.0" prefWidth="244.0" promptText="" style="-fx-background-radius: 7;">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </TextField>
                        <TextField fx:id="passwordInput" prefHeight="30.0" prefWidth="244.0" promptText="" style="-fx-background-radius: 7;" />
                  <HBox>
                     <children>
                        <Button fx:id="removeButton" minWidth="75.0" mnemonicParsing="false" onAction="#removeUser" prefWidth="75.0" styleClass="custom-button" text="Remove" />
                        <HBox>
                           <padding>
                              <Insets right="70.0" />
                           </padding>
                        </HBox>
                              <Button fx:id="editButton" minWidth="75.0" mnemonicParsing="false" onAction="#updateUser" prefWidth="75.0" styleClass="custom-button" text="Save" />
                     </children>
                  </HBox>
                    </children>
                </VBox>
                <Label fx:id="exceptionLabel" />
                <HBox alignment="CENTER" prefHeight="50.0" />
            </children>
        </VBox>
    </children>
</VBox>
