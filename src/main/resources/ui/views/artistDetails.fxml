<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox minWidth="700.0" stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univaq.disim.psvmsa.unify.controller.ArtistDetailsController">
    <children>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="30.0">
         <children>
            <ImageView fx:id="artistImagePreview" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
            <VBox>
               <children>
                        <Label fx:id="artistName" style="-fx-font-size: 20;" text="Artist " />
                  <Label fx:id="artistBiography" />
                  <VBox>
                     <children>
                        <Label fx:id="membersLabel">
                           <padding>
                              <Insets top="7.0" />
                           </padding></Label>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
        <VBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                  <FlowPane fx:id="artistPictures" hgap="10.0" vgap="10.0" />
                  <HBox>
                     <children>
                        <Label fx:id="albumLabel" style="-fx-font-size: 16;" text="Albums:" />
                     </children>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <FlowPane fx:id="artistAlbums" hgap="10.0" />
                  <HBox>
                     <children>
                        <Label fx:id="songLabel" style="-fx-font-size: 16;" text="Songs:" />
                     </children>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <VBox fx:id="artistSongs" spacing="10.0" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
                <HBox>
                    <children>
                        <HBox HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</VBox>
