<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univaq.disim.psvmsa.unify.controller.AddAlbumController">
   <children>
      <Label styleClass="title-text" text="Create Album">
         <padding>
            <Insets bottom="25.0" />
         </padding>
      </Label>
      <VBox alignment="TOP_CENTER" fillWidth="false" VBox.vgrow="NEVER">
         <children>
            <TextField fx:id="albumInput" prefWidth="200.0" promptText="Album name" style="-fx-background-radius: 7;">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding></TextField>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveAlbum" prefWidth="200.0" styleClass="custom-button" text="Save" />
            <Label fx:id="exceptionLabel" />
            <HBox alignment="CENTER" prefHeight="50.0" />
         </children></VBox>
   </children>
</VBox>
