<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univaq.disim.psvmsa.unify.controller.AddGenreController">
   <children>
      <VBox alignment="TOP_CENTER" fillWidth="false" VBox.vgrow="ALWAYS">
         <children>
            <Label styleClass="title-text" text="Add genre">
               <padding>
                  <Insets bottom="50.0" />
               </padding>
            </Label>
            <Label styleClass="header-textfield" text="Insert genre name">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="genreInput" onMouseClicked="#textFieldClick" prefHeight="30.0" prefWidth="244.0" promptText="write here..." style="-fx-background-radius: 7;">
               <VBox.margin>
                  <Insets bottom="70.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="saveButton" minWidth="100.0" mnemonicParsing="false" onAction="#saveGenre" styleClass="custom-button" text="Save" />
            <Label fx:id="exeptionLabel" />
            <HBox alignment="CENTER" prefHeight="50.0" />
            <Button fx:id="exit" mnemonicParsing="false" onAction="#exit" style="-fx-background-color: #3D9CA2;" styleClass="custom-button" text="Exit" />
         </children>
      </VBox>
   </children>
</VBox>
