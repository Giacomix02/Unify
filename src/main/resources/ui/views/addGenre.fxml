<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="400.0" minWidth="600.0" stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univaq.disim.psvmsa.unify.controller.AddGenreController">
   <children>
      <VBox alignment="CENTER" fillWidth="false" VBox.vgrow="ALWAYS">
         <children>
            <Label styleClass="title-text" text="Create genre">
               <padding>
                  <Insets bottom="25.0" />
               </padding>
            </Label>
            <VBox prefWidth="200.0" spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <TextField fx:id="genreInput" onMouseClicked="#textFieldClick" prefHeight="30.0" prefWidth="244.0" promptText="Write genere name" style="-fx-background-radius: 7;">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextField>
                  <Button fx:id="saveButton" minWidth="200.0" mnemonicParsing="false" onAction="#saveGenre" prefWidth="200.0" styleClass="custom-button" text="Save" />
               </children>
            </VBox>
            <Label fx:id="exceptionLabel" />
            <HBox alignment="CENTER" prefHeight="50.0" />
         </children>
      </VBox>
   </children>
</VBox>
